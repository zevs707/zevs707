<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.MahallaSinovNoactionbar"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".NavFragment">

    <ImageView
        android:id="@+id/bgHeader"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="55dp"
        android:contentDescription="Maxalla1"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/mahalla" />

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bgHeader"
        android:layout_marginBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="40dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/ic_person_24"
                        android:drawablePadding="30dp"
                        android:hint="Username"
                        android:inputType="text"
                        android:padding="10dp" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#71D2D2D2"
                        android:layout_margin="15dp"
                        android:layout_below="@+id/etUsername"/>

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:layout_below="@+id/view1"
                        android:drawableLeft="@drawable/ic_lock_24"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="30dp"
                        android:inputType="textPassword"
                        android:background="@android:color/transparent"
                        android:hint="Password"/>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btlogin"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#9F4BFF"
                android:src="@drawable/ic_arrow_24"
                android:text="Kirish"
                android:textSize="20sp" />
            `
        </LinearLayout>

    </ScrollView>




</LinearLayout>